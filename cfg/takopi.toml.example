transport = "telegram"
workflow = "assistant"
default_engine = "claude"

[transports.telegram]
bot_token = "YOUR_BOT_TOKEN"
chat_id = 0

[claude]
allowed_tools = ["Bash", "Read", "Edit", "Write", "Glob", "Grep", "WebSearch", "WebFetch"]

[plugins]
enabled = ["takopi", "takopi-reload", "takopi-demiurg", "takopi-info", "takopi-refresh", "takopi-login"]
